#!/usr/local/bin/konoha

using konoha.cookie.*;

String html = """
<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<title>SEKENS</title>
		<link rel="stylesheet" type="text/css" href="./ext-4.0.7/resources/css/ext-all.css"/>
		<link rel="stylesheet" type="text/css" href="./ext-4.0.7/shared/example.css"/>
		<link rel="stylesheet" type="text/css" href="./resources/peers.css"/>
		<link rel="stylesheet" type="text/css" href="./ext-4.0.7/example/ux/DataView/DragSelector.css" />
		<script type="text/javascript" src="./ext-4.0.7/bootstrap.js"></script>
		<script type="text/javascript" src="./jssrc/top.js"></script>
		</head>
		<body>
		</body>
	</head>
	<body>
	</body>
</html>"""


void main()
{
	if (cookie["SID"] != null) {
		OUT << "Conten-Type: text/html\n" << EOL << EOL;
		html = html.replace("top.js", main.js);
		
		OUT << html;
	}
	else {
		OUT << "Content-Type: text/html\n" << EOL << EOL;
		OUT << html;
	}
	
}
